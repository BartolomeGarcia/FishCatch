<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_beige">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Imagen de la captura -->
        <ImageView
            android:id="@+id/imagenDetalle"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp"
            android:contentDescription="Foto de la captura" />

        <!-- Botón para Agregar Imagen -->
        <Button
            android:id="@+id/btnAgregarImagen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Añadir Imagen"
            android:layout_marginTop="16dp"
            style="@style/RusticButton.Olive"
            android:padding="12dp" />

        <!-- Especie -->
        <TextView
            android:id="@+id/especieDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Especie"
            style="@style/RusticText.Title"
            android:layout_marginTop="20dp" />

        <!-- Peso -->
        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Peso"
            style="@style/RusticText.Label"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/pesoDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0.0"
            android:textColor="@color/text_dark"
            android:textSize="16sp" />

        <!-- Tamaño -->
        <TextView
            android:id="@+id/textView19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tamaño"
            style="@style/RusticText.Label"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/tamannoDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0.0"
            android:textColor="@color/text_dark"
            android:textSize="16sp" />

        <!-- Fecha -->
        <TextView
            android:id="@+id/textView20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha"
            style="@style/RusticText.Label"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/fechaDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="00/00/0000"
            android:textColor="@color/text_dark"
            android:textSize="16sp" />

        <!-- Hora -->
        <TextView
            android:id="@+id/textView21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hora"
            style="@style/RusticText.Label"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/horaDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="@color/text_dark"
            android:textSize="16sp" />

        <!-- Comentarios -->
        <TextView
            android:id="@+id/textView22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Comentarios"
            style="@style/RusticText.Label"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/comentariosDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Comentarios"
            android:textColor="@color/text_dark"
            android:backgroundTint="@color/text_dark" />

        <!-- Temperatura -->
        <TextView
            android:id="@+id/textViewTituloTemperatura"
            style="@style/RusticText.Label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Temperatura (ºC)" />

        <TextView
            android:id="@+id/temperaturaDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/text_dark"
            android:textSize="16sp" />

        <!-- Contenedor del mapa -->
        <FrameLayout
            android:id="@+id/mapContainer"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="8dp" />

        <!-- Botón para guardar -->
        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar Cambios"
            android:layout_marginTop="16dp"
            style="@style/RusticButton.Brown"
            android:padding="12dp" />
    </LinearLayout>
</ScrollView>
